        <combatPowerFactor>0.8</combatPowerFactor>
        <factionlessGenerationWeight>1.0</factionlessGenerationWeight>
        <genes>
            <!-- Vanilla (0,0,0,+2,-2,+2,+2,+2,+3,-1,-2,0,-2,-1,-1 = +2 MET) -->
