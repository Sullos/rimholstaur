<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
  <!-- cowbell -->
	<ThingDef ParentName="SApparelMakeableBase">
		<defName>Cowbell</defName>
		<label>Cow Bell</label>
		<description>A cow bell necklace hanging from a small collar.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/Cowbell/Cowbell</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>25</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
	
		<recipeMaker>
			 <researchPrerequisite>CowClothingResearch</researchPrerequisite>
			 <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
			 <useIngredientsForColor>true</useIngredientsForColor>
			 <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			 <effectWorking>Smith</effectWorking>
			 <soundWorking>Recipe_Smith</soundWorking>
			 <skillRequirements>
				<Crafting>5</Crafting>
			 </skillRequirements>
		</recipeMaker>

		<thingCategories>
			<li>Apparel</li>
		</thingCategories>

		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>6000</WorkToMake>
			<Mass>0.1</Mass>
			<Beauty>0.7</Beauty>
			<StuffEffectMultiplierArmor>0</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>

		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
			</layers>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/Cowbell/Cowbell</wornGraphicPath>
			<canBeDesiredForIdeo>true</canBeDesiredForIdeo>
			<tags>
        		<li>Cow</li>
      		</tags>
		</apparel>

		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

</Defs>