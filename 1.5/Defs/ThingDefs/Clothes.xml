<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- apparel parent (things that every outfit will share by default) -->
	
	<ThingDef Name="SApparelMakeableBase" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers Inherit="False">
        <li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>
	
	
	<!--Cow Bikini Top  -->
	
	<ThingDef ParentName="SApparelMakeableBase">
		<defName>Cowkini</defName>
		<label>Cow Bikini Top</label>
		<description>A simple cow-spotted bikini top. It's made with furs for extra warmth whilst making you look adorable.</description>
		<recipeMaker>
			<researchPrerequisite>CowClothingResearch</researchPrerequisite>
			<useIngredientsForColor>true</useIngredientsForColor>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/Cowkini/Cowkini</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>30</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>Apparel</li>
			<li>Underwear</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>6000</WorkToMake>
			<Mass>0.2</Mass>
			<Beauty>0.5</Beauty>
			<StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.30</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.40</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>SizedApparel_ShowBelly</li>
				<li>SizedApparel_ShowPrivateCrotch</li>
				<li>Cow</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/Cowkini/Cowkini</wornGraphicPath>
			<canBeDesiredForIdeo>true</canBeDesiredForIdeo>
			<gender>Female</gender>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>
  
